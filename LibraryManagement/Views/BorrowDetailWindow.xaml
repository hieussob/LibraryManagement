<Window x:Class="LibraryManagement.Views.BorrowDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagement.Views"
        xmlns:converters="clr-namespace:LibraryManagement.Converters"
        mc:Ignorable="d"
        Title="Chi tiết phiếu mượn" Height="550" Width="650"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Thông tin người mượn -->
        <GroupBox Grid.Row="0" Header="Thông tin người mượn" Padding="15" Margin="0,0,0,15" BorderBrush="#DDD">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Row 0: Họ tên và Cấp bậc -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Họ tên:" FontWeight="SemiBold" Margin="0,0,10,8"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding BorrowRecord.BorrowerName}" Margin="0,0,0,8"/>

                <TextBlock Grid.Row="0" Grid.Column="3" Text="Cấp bậc:" FontWeight="SemiBold" Margin="0,0,10,8"/>
                <TextBlock Grid.Row="0" Grid.Column="4" Text="{Binding BorrowRecord.Rank}" Margin="0,0,0,8"/>

                <!-- Row 1: Số điện thoại và Chức vụ -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Số điện thoại:" FontWeight="SemiBold" Margin="0,0,10,8"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding BorrowRecord.BorrowerPhone}" Margin="0,0,0,8"/>

                <TextBlock Grid.Row="1" Grid.Column="3" Text="Chức vụ:" FontWeight="SemiBold" Margin="0,0,10,8"/>
                <TextBlock Grid.Row="1" Grid.Column="4" Text="{Binding BorrowRecord.Position}" Margin="0,0,0,8"/>

                <!-- Row 2: Cấp bậc và Đơn vị -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Cấp bậc:" FontWeight="SemiBold" Margin="0,0,10,0"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding BorrowRecord.Rank}"/>

                <TextBlock Grid.Row="2" Grid.Column="3" Text="Đơn vị:" FontWeight="SemiBold" Margin="0,0,10,0"/>
                <TextBlock Grid.Row="2" Grid.Column="4" Text="{Binding BorrowRecord.Unit}"/>
            </Grid>
        </GroupBox>

        <!-- Thông tin mượn -->
        <GroupBox Grid.Row="1" Header="Thông tin mượn" Padding="15" Margin="0,0,0,15" BorderBrush="#DDD">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Ngày mượn:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding BorrowRecord.BorrowDate, StringFormat='dd/MM/yyyy HH:mm'}" Margin="0,0,0,8"/>

                <TextBlock Grid.Row="0" Grid.Column="3" Text="Hạn trả:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <TextBlock Grid.Row="0" Grid.Column="4" Text="{Binding BorrowRecord.DueDate, StringFormat='dd/MM/yyyy'}" Margin="0,0,0,8"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Ngày trả:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding BorrowRecord.ReturnDate, StringFormat='dd/MM/yyyy HH:mm'}" Margin="0,0,0,8"/>

                <TextBlock Grid.Row="1" Grid.Column="3" Text="Trạng thái:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <TextBlock Grid.Row="1" Grid.Column="4" Text="{Binding BorrowRecord.Status}" FontWeight="SemiBold" Margin="0,0,0,8">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding BorrowRecord.Status}" Value="Đang mượn">
                                    <Setter Property="Foreground" Value="#2196F3"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding BorrowRecord.Status}" Value="Đã trả">
                                    <Setter Property="Foreground" Value="#4CAF50"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding BorrowRecord.Status}" Value="Quá hạn">
                                    <Setter Property="Foreground" Value="#F44336"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Ghi chú:" FontWeight="SemiBold" Grid.ColumnSpan="2" Margin="0,5,0,5"/>
                <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="5" Text="{Binding BorrowRecord.Notes}" 
                           TextWrapping="Wrap" MaxHeight="60" VerticalAlignment="Top"/>
            </Grid>
        </GroupBox>

        <!-- Danh sách sách mượn -->
        <GroupBox Grid.Row="2" Header="Danh sách sách đã mượn" Padding="10" BorderBrush="#DDD">
            <DataGrid ItemsSource="{Binding BorrowedBooks}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      RowHeight="35"
                      AlternatingRowBackground="#F5F5F5">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Tên sách" Binding="{Binding BookTitle}" Width="*"/>
                    <DataGridTextColumn Header="Tác giả" Binding="{Binding Author}" Width="150"/>

                    <DataGridTextColumn Header="Số lượng" Binding="{Binding Quantity}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="✅ Trả sách" Command="{Binding ReturnBooksCommand}" 
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Visibility="{Binding CanReturn, Converter={StaticResource BoolToVisibilityConverter}}"
                    Padding="20,10" Margin="0,0,10,0" FontSize="14" 
                    Background="#4CAF50" Foreground="White" BorderThickness="0" Cursor="Hand"/>
            <Button Content="❌ Đóng" IsCancel="True" 
                    Padding="20,10" FontSize="14" 
                    Background="#9E9E9E" Foreground="White" BorderThickness="0" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
