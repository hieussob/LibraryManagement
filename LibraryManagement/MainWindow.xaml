<Window x:Class="LibraryManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagement"
        xmlns:converters="clr-namespace:LibraryManagement.Converters"
        mc:Ignorable="d"
        Title="Hệ thống quản lý thư viện" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <converters:ViewToViewModelConverter x:Key="ViewToViewModelConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="📚" FontSize="32" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding PageTitle}" FontSize="24" FontWeight="Bold" 
                               Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="📚 Quản lý sách" Command="{Binding ShowBookManagementCommand}"
                            Style="{StaticResource MenuButtonStyle}" Margin="0,0,10,0"/>
                    <Button Content="📋 Quản lý mượn sách" Command="{Binding ShowBorrowManagementCommand}"
                            Style="{StaticResource MenuButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content Area -->
        <Border Grid.Row="1" Background="White" Margin="10">
            <ContentControl Content="{Binding CurrentView, Converter={StaticResource ViewToViewModelConverter}}"/>
        </Border>
    </Grid>
</Window>
